<div class="col-12 col-md-8 ps-5">
	<h2 class="mb-4">10 songs (30 minutes of 60 still available)</h2>
	{% for track in tracks %}
		<div class="song-list" {{ stimulus_controller('song-controls', { infoUrl: path('app_api_song', { songId: loop.index+1 } ) }) }}>
			<div class="d-flex mb-3">
				<a href="#" {{ stimulus_action('song-controls', 'play') }}>
					<i class="fas fa-play me-3"></i>
				</a>
				<span class="song-details">{{ track.song }}
					-
					{{ track.artist }}</span>
				<a href="{{path('app_api_song',{ songId: loop.index+1 })}}">
					<i class="fas fa-bars mx-3"></i>
				</a>
				<a href="#">
					<i class="fas fa-times"></i>
				</a>
			</div>
		</div>
	{% endfor %}
	<button type="button" class="btn btn-success">
		<i class="fas fa-plus"></i>
		Add a song</button>
</div>

